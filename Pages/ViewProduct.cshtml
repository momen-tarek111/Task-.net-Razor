@page
@model MiniShopRazor.Pages.ViewProductModel
@{
    Layout = "DashBoardLayout";
}
<div class="dash-content">
    <div class="overview">
        <div class="title">
            <i class="uil uil-tachometer-fast-alt"></i>
            <span class="text">All Product</span>
        </div>
    </div>
    <div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <td class="table-light">id</td>
                    <td class="table-light">Name</td>
                    <td class="table-light">Description</td>
                    <td class="table-light">price</td>
                    <td class="table-light">Quantity</td>
                    <td class="table-light">Sized</td>
                    <td class="table-light">operation</td>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.products)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>@item.Price</td>
                        <td>@item.Quantity </td>
                        <td>@item.EnableSize </td>
                        @if (item.CompanyId == 2)
                        {
                            <td>Niki</td>
                        }
                        else
                        {
                            <td>Adidas</td>
                           
                        }
                        
                        <td>
                            <a class="btn btn-success" asp-page="EditProduct" asp-route-id="@item.Id" role="button">
                                <span class="material-symbols-outlined">
                                    Edit
                                </span>
                            </a>
                            <form method="post" asp-page-handler="Delete" asp-route-id="@item.Id">
                                <button class="btn btn-danger " role="button" type="submit">
                                    <span class="material-symbols-outlined">
                                        delete
                                    </span>
                                </button>
                            </form>
                        </td>

                    </tr>
                }

            </tbody>
        </table>

    </div>
</div>